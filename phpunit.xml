<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.5/phpunit.xsd" bootstrap="tests/bootstrap.php" colors="true" cacheDirectory=".phpunit.cache">
  <testsuites>
    <testsuite name="Package">
      <directory suffix=".php">./tests/Unit</directory>
    </testsuite>
  </testsuites>
  <php>
    <env name="IPSTACK_API_KEY" value="%IPSTACK_API_KEY%" />
  </php>
  <source>
    <include>
      <directory>src/</directory>
    </include>
  </source>
</phpunit>
